<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignupUser.LoginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <!--<ImageView-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="160dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/logo" />-->

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="May I ask you phone number?"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/bmvblack" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/spinnerCountries"
            android:layout_width="60dp"
            android:text="+91"
            android:gravity="right"
            android:textSize="19dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/rectanglebackground"
            android:digits="0123456789"
            android:inputType="number"
            android:hint="Enter your number"
            android:paddingLeft="12dp"
            android:textColor="@color/colorAccent"
            android:maxLength="10" />

    </LinearLayout>


    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/round_back"
        android:text="Continue"
        android:onClick="continuteButton"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Offered by Zmedios" />



</RelativeLayout>
